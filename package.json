{
  "name": "@slowcode/tomd",
  "version": "1.0.3",
  "type": "module",
  "main": "cli.js",
  "description": "A CLI tool that converts Markdown files to styled terminal output with colors and formatting",
  "scripts": {
    "test": "node cli.js test.md",
    "start": "node cli.js",
    "prepublishOnly": "npm test",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "release:patch": "npm version patch && git push origin main --follow-tags",
    "release:minor": "npm version minor && git push origin main --follow-tags",
    "release:major": "npm version major && git push origin main --follow-tags"
  },
  "bin": {
    "tomd": "cli.js"
  },
  "keywords": [
    "markdown",
    "terminal",
    "cli",
    "converter",
    "styled-output",
    "chalk",
    "markdown-viewer",
    "console",
    "formatting",
    "colors"
  ],
  "author": "Ismail M",
  "license": "MIT",
  "homepage": "https://github.com/ismailmmd/tomd#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ismailmmd/tomd.git"
  },
  "bugs": {
    "url": "https://github.com/ismailmmd/tomd/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "preferGlobal": true,
  "files": [
    "cli.js",
    "README.md"
  ],
  "dependencies": {
    "chalk": "5.4.1",
    "marked": "16.1.1"
  },
  "devDependencies": {},
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/ismailmmd"
  }
